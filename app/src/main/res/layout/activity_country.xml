<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Country">

  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="457dp"
      android:layout_height="85dp"
      android:background="@color/LightGray"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="@string/Ur"
        android:textAlignment="textEnd"
        android:textColor="@color/yt"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/pl2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="@string/Tr"
        android:textColor="@color/yt"
        android:textSize="20sp"
        android:textStyle="bold" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout4"
      android:layout_width="461dp"
      android:layout_height="32dp"
      android:layout_marginTop="2dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="Выберите страну:"
        android:textAlignment="center"
        android:textSize="24dp" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout5"
      android:layout_width="413dp"
      android:layout_height="38dp"
      android:layout_marginTop="680dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

    <Button
        android:id="@+id/button9"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Button"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnExpenses"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Расходы:"
        android:backgroundTint="#8DBA21"
        android:textColor="@color/white"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnQues"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="?android:attr/selectableItemBackground"
        android:text="Возникли вопросы?"
        android:textColor="@android:color/darker_gray"
        android:textSize="10dp"
        tools:ignore="TouchTargetSizeCheck" />
  </LinearLayout>

  <ScrollView
      android:layout_width="417dp"
      android:layout_height="675dp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:id="@+id/textView5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Россия"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="30dp"
          android:textStyle="bold" />

      <ImageView
          android:id="@+id/imageView6"
          android:layout_width="match_parent"
          android:layout_height="580dp"
          app:srcCompat="@drawable/russia" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnRuss"
          android:layout_width="154dp"
          android:layout_height="55dp"
          android:layout_gravity="center"
          android:background="@drawable/r_flag"
          tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

      <TextView
          android:id="@+id/textView9"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="---------------------------------------------------------------"
          android:textSize="24dp" />

      <TextView
          android:id="@+id/textView6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Греция"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="30dp"
          android:textStyle="bold" />

      <ImageView
          android:id="@+id/imageView7"
          android:layout_width="match_parent"
          android:layout_height="577dp"
          app:srcCompat="@drawable/greece" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnGr"
          android:layout_width="154dp"
          android:layout_height="55dp"
          android:layout_gravity="center"
          android:background="@drawable/greece_flag"
          tools:ignore="SpeakableTextPresentCheck" />

      <TextView
          android:id="@+id/textView10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="---------------------------------------------------------------"
          android:textSize="24dp" />

      <TextView
          android:id="@+id/textView7"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Италия"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="30dp"
          android:textStyle="bold" />

      <ImageView
          android:id="@+id/imageView8"
          android:layout_width="match_parent"
          android:layout_height="589dp"
          app:srcCompat="@drawable/italy" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnItal"
          android:layout_width="154dp"
          android:layout_height="55dp"
          android:background="@drawable/it_flag"
          android:layout_gravity="center"/>

      <TextView
          android:id="@+id/textView11"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="---------------------------------------------------------------"
          android:textSize="24dp" />

      <TextView
          android:id="@+id/textView8"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Чехия"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="30dp"
          android:textStyle="bold" />

      <ImageView
          android:id="@+id/imageView9"
          android:layout_width="match_parent"
          android:layout_height="510dp"
          app:srcCompat="@drawable/czechia" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnChz"
          android:layout_width="154dp"
          android:layout_height="55dp"
          android:layout_gravity="center"
          android:background="@drawable/czechia_flag"
          />

      <TextView
          android:id="@+id/textView12"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="---------------------------------------------------------------"
          android:textSize="24dp" />

      <TextView
          android:id="@+id/textView13"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Испания"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="30dp"
          android:textStyle="bold" />

      <ImageView
          android:id="@+id/imageView10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/spain" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnSp"
          android:layout_width="154dp"
          android:layout_height="55dp"
          android:layout_gravity="center"
          android:background="@drawable/spain_flag"/>

      <TextView
          android:id="@+id/textView14"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="---------------------------------------------------------------"
          android:textSize="24dp" />

      <TextView
          android:id="@+id/textView15"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Франция"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="30dp"
          android:textStyle="bold" />

      <ImageView
          android:id="@+id/imageView11"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/france" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnFr"
          android:layout_width="154dp"
          android:layout_height="55dp"
          android:layout_gravity="center"
          android:background="@drawable/france_flag"/>

    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>