<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Czechia">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="457dp"
        android:layout_height="85dp"
        android:background="@color/LightGray"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="@string/Ur"
            android:textAlignment="textEnd"
            android:textColor="@color/yt"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/pl2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="@string/Tr"
            android:textColor="@color/yt"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="412dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/button3"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonBack7"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:background="@drawable/back"
            android:text="sadasda"
            android:textSize="1dp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button21"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonInPlCzh"
            android:layout_width="155dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@color/LightGray"
            android:text="Интересные места"
            android:textColor="@color/yt"/>
    </TableRow>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="407dp"
        android:layout_height="704dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----------------------------------------------------------------------"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="274dp"
            app:srcCompat="@drawable/czhia" />

        <Button
            android:id="@+id/button24"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="Button"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="385dp"
            android:text="Чехия - небольшое государство в Центральной Европе. Это одна из самых самобытных и привлекательных для туристов стран Евросоюза с богатой историей, множеством интересных достопримечательностей, замков и памятников культуры. Чехия граничит на севере с Польшей, на западе и северо-западе - с Германией, на востоке - с Словакией, на юге - с Австрией. Является парламентской республикой. Официальный язык - чешский."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>