<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Italy">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="457dp"
        android:layout_height="85dp"
        android:background="@color/LightGray"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="@string/Ur"
            android:textAlignment="textEnd"
            android:textColor="@color/yt"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/pl2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="@string/Tr"
            android:textColor="@color/yt"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="412dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/button6"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonBack4"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:text="efef"
            android:textSize="1dp"
            android:background="@drawable/back"
            tools:ignore="TouchTargetSizeCheck"/>

        <Button
            android:id="@+id/button21"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonInPlIt"
            android:layout_width="155dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@color/LightGray"
            android:text="Интересные места"
            android:textColor="@color/yt" />
    </TableRow>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="411dp"
        android:layout_height="705dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----------------------------------------------------------------------"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="283dp"
            app:srcCompat="@drawable/ittttt" />

        <Button
            android:id="@+id/button24"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="Button"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:text="Италия - это одно из самых уникальных и очаровательных мест в мире. Она имеет одни из самых красивых и разнообразных ландшафтов в Европе, самый большой в мире клад сокровищ истории, культуры и искусства, благоприятный тёплый климат и вкусную аутентичную кухню. При этом Италия совсем не идеальна. Её исторические города и древности страдают от современного развития, инфраструктура работает на своём пике, есть проблемы в экономике и социальной сфере. Но, побывав здесь, Вы точно полюбите эту страну за её буйный темперамент, бесшабашный нрав, вкусную кухню и особую атмосферу. "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>